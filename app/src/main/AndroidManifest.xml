            </intent-filter>
        </activity>

        <receiver android:name=".widget.RevenueWidgetReceiver" android:exported="true">
            <intent-filter>
                <action android:name="android.appwidget.action.APPWIDGET_UPDATE" />
            </intent-filter>
            <meta-data android:name="android.appwidget.provider" android:resource="@xml/revenue_widget_info" />
        </receiver>

        <!-- AdMob Config (Real ID) -->
        <meta-data android:name="com.google.android.gms.ads.APPLICATION_ID" android:value="ca-app-pub-2159601373823175~7434156869"/>
    </application>

</manifest>
